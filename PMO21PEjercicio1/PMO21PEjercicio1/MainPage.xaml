<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PMO21PEjercicio1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <StackLayout>
                <Label Text="Ingrese dos números:" />
                <Entry Placeholder="Número 1" x:Name="numero1Entry" />
                <Entry Placeholder="Número 2" x:Name="numero2Entry" />
                <Label Text="Resultado:" x:Name="resultadoLabel" />
                <Button Text="Suma" Clicked="Suma_Clicked" />
                <Button Text="Resta" Clicked="Resta_Clicked" />
                <Button Text="Multiplicación" Clicked="Multiplicacion_Clicked" />
                <Button Text="División" Clicked="Division_Clicked" />
            </StackLayout>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
